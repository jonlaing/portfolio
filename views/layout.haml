!!! 5
%html
  %head
    %title= "#{t.global.title} | #{@title}" 
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    %link{:href => "bootstrap/css/bootstrap.min.css", :type => "text/css", :rel => "stylesheet"}/
    %link{:href => "style/application.css", :type => "text/css", :rel => "stylesheet"}/
    %link{:href => "bootstrap/css/bootstrap-responsive.min.css", :type => "text/css", :rel => "stylesheet"}/
    %link{:rel => "shortcut icon", :href => "img/favicon.ico"}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-6183828-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    %header
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %h1= link_to t.global.title, "/", :class => 'brand', :id => 'logo'
            %nav.nav-collapse
              %ul.nav
                %li{:class => params[:page].nil? ? "active" : ""}= link_to "Portfolio", "/"
                %li{:class => params[:page] == "about" ? "active" : "" }= link_to "About", "about"
                %li{:class => params[:page] == "contact" ? "active" : ""}= link_to "Contact", "contact"
                %li= link_to "Blog", t.global.blogurl
                %li= link_to "Store", "http://society6.com/JonLaing/prints"
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle(data-toggle="dropdown"
                                      href="#")
                    Follow Me
                    %b.caret
                  %ul.dropdown-menu= dropdown_from_yaml(t.global.sociallinks)

    .container
      = yield
      %footer
        %p.pull-right
          %a{:href => "http://jonlaing.tumblr.com"}
            %img{:src => "img/social_icons/16/tumblr.png"}
          %a{:href => "http://twitter.com/jonlaingstudios"}
            %img{:src => "img/social_icons/16/twitter.png"}
          %a{:href => "http://www.linkedin.com/in/jonlaing"}
            %img{:src => "img/social_icons/16/linkedin.png"}
          %a{:href => "http://www.behance.net/jonlaing"}
            %img{:src => "img/social_icons/16/behance.png"}
        %p= t.global.copyright

    %script{:src => "js/jquery-1.7.2.min.js", :type => "text/javascript"}
    %script{:src => "bootstrap/js/bootstrap.min.js", :type => "text/javascript"}
    %script{:src => "js/application.js", :type => "text/javascript"}
